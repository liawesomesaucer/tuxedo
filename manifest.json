{
  "name": "Tuxedo",
  "description": "Selectively make websites black and white to make them less distracting",
  "version": "0.0",
  "manifest_version": 3,
  "content_scripts": [
    {
      "matches": ["https://*.facebook.com/*", "https://*.reddit.com/*", "https://*.youtube.com/*"],
      "css": ["tuxedo.css"],
      "js": ["tuxedo.js"],
      "run_at": "document_end"
    }
  ],
  "permissions": ["tabs"],
  "host_permissions": [
  ],
  "action": {
    "default_popup": "popup.html"
  }
}
